{% extends "base.twig" %}

{% block content %}
	<div class="scrollbar block gray" data-behavior="scrollbar">
		<button type="button" name="button" class="scrollbar-left ion-chevron-left js-left"></button>
		<ul class="thumbnails unstyle flexbox js-slider">
			{% for post in related %}
				<li class="thumbnails-image">
					<a href="{{post.link}}">
						{% if post.thumbnail.src %}
							<img src="{{post.thumbnail.src}}" />
						{% endif %}
					</a>
				</li>
			{% endfor %}
		</ul>
		<button type="button" name="button" class="scrollbar-right ion-chevron-right js-right"></button>
	</div>

	<article class="{{post.post_type}}" id="post-{{post.ID}}">
		<div class="article-content">
			<h1 class="heading--xl">{{post.title}}</h1>
			<p class="blog-author">
				<span>By</span> <a href="{{post.author.path}}"> {{ post.author.name }} </a> <span>&bull;</span> {{ post.post_date|date}}
			</p>
			<div class="article-body">
				{{post.content}}
			</div>
		</div>
	</article>
{% endblock %}
